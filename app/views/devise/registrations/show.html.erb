<h2>My Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <div class="value">
    <%= f.object.email %>
    </div>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <div class="value">
    <%= f.object.first_name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <div class="value">
    <%= f.object.last_name %>
    </div>
  </div>

  <div class="field">
    <%= f.label :birthdate %>
    <div class="value">
    <%= f.object.birthdate %>
    </div>
  </div>

  <div class="field">
    <%= f.label :bio %>
    <%= f.object.bio %>
  </div>

<% end %>

<%= button_to "Edit Profile Info", edit_user_registration_path, method: :get, class: "btn btn-primary" %>


<%= link_to "Back to home", root_path, class: "btn btn-secondary" %>