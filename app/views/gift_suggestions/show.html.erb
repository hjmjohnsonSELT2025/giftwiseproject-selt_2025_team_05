<h1>Gift ideas for <%= @recipient.first_name %> <%= @recipient.last_name %></h1>

<section class="mb-4">
  <h3>Profile Snapshot</h3>
  <p><strong>Bio:</strong> <%= @bio.presence || "No bio provided yet" %></p>
  <p><strong>Wishlist items:</strong> <%= @wishlist.count %></p>
  <ul>
    <% @wishlist.each do |item| %>
      <li><strong><%= item.item_name %></strong> – $<%= number_with_precision(item.cost, precision: 2) %><br><em><%= item.notes %></em></li>
    <% end %>
  </ul>
</section>

<section class="border p-3 rounded">
  <h3>Gift Suggestion Assistant</h3>
  <p class="text-muted">PLACEHOLDER- will change this UI</p>
  <textarea class="form-control" rows="6" placeholder="Ask the assistant for ideas…"></textarea>
  <div class="mt-2 text-end">
    <button class="btn btn-secondary" disabled>Save suggestion</button>
  </div>
</section>

<%= link_to "Back to event", event_path(@event), class: "btn btn-outline-primary mt-3" %>