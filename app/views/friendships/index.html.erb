<!--
Source for friends page template:
https://github.com/eltonlazzarin/friends-list-rails
-->
<div class="container">
  <div class="text-center mt-5 mb-5">
    <h2>Friends</h2>
    <p>Manage friendships and incoming requests</p>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Birthday</th>
        <th>Bio</th>
        <th>Gifts</th>
        <th>Status</th>
        <th class="text-end">Action</th>
      </tr>
      </thead>

      <tbody>
      <!-- Incoming Friend Requests -->
      <% @incoming.each do |incoming_friend| %>
        <% user = incoming_friend.user %>
        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= user.email %></td>
          <td><%= user.birthdate&.strftime("%b %d, %Y") || "—" %></td>
          <td><%= truncate(user.bio.to_s, length: 40) %></td>
          <td>
            <% if current_user.has_gift_history_with?(user) %>
              <%= link_to "View Gifts", friend_gifts_path(user), class: "btn btn-info btn-sm" %>
            <% else %>
              <span class="text-muted fst-italic small">
                <small>You haven’t gotten <%= user.first_name %> any gifts yet</small>
              </span>
            <% end %>
          </td>
          <td><span class="badge bg-warning text-dark">Incoming Request</span></td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= button_to "Accept",
                            friendship_path(incoming_friend, status: "accepted"),
                            method: :patch,
                            class: "btn btn-sm btn-success" %>
              <%= button_to "Decline",
                            friendship_path(incoming_friend),
                            method: :delete,
                            data: { turbo_confirm: "Decline this friend request?" },
                            class: "btn btn-sm btn-outline-danger" %>
            </div>
          </td>
        </tr>
      <% end %>

      <!-- Outgoing Friend Requests -->
      <% @outgoing.each do |outgoing_friend| %>
        <% user = outgoing_friend.friend %>
        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= user.email %></td>
          <td><%= user.birthdate&.strftime("%b %d, %Y") || "—" %></td>
          <td><%= truncate(user.bio.to_s, length: 40) %></td>
          <td>
            <% if current_user.has_gift_history_with?(user) %>
              <%= link_to "View Gifts", friend_gifts_path(user), class: "btn btn-info btn-sm" %>
            <% else %>
              <span class="text-muted fst-italic small">
                <small>You haven’t gotten <%= user.first_name %> any gifts yet</small>
              </span>
            <% end %>
          </td>
          <td><span class="badge bg-info text-dark">Pending (Sent)</span></td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= button_to "Cancel",
                            friendship_path(outgoing_friend),
                            method: :delete,
                            data: { turbo_confirm: "Cancel this pending request?" },
                            class: "btn btn-sm btn-outline-danger" %>
            </div>
          </td>
        </tr>
      <% end %>

      <!-- Accepted Friends -->
      <% @friends.each do |user| %>
        <% friend = Friendship.where(status: "accepted")
                            .where("(user_id = ? AND friend_id = ?) OR (user_id = ? AND friend_id = ?)",
                                   current_user.id, user.id, user.id, current_user.id)
                            .first %>

        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= user.email %></td>
          <td><%= user.birthdate&.strftime("%b %d, %Y") || "—" %></td>
          <td><%= truncate(user.bio.to_s, length: 40) %></td>
          <td>
            <% if current_user.has_gift_history_with?(user) %>
              <%= link_to "View Gifts", friend_gifts_path(user), class: "btn btn-info btn-sm" %>
            <% else %>
              <span class="text-muted fst-italic small">
                <small>You haven’t gotten <%= user.first_name %> any gifts yet</small>
              </span>
            <% end %>
          </td>
          <td><span class="badge bg-success">Friend</span></td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= button_to "Remove",
                            friendship_path(friend),
                            method: :delete,
                            data: { turbo_confirm: "Remove this friend?" },
                            class: "btn btn-sm btn-outline-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to "Find Friends", new_friendship_path, class: "btn btn-primary" %>
  </div>
</div>
