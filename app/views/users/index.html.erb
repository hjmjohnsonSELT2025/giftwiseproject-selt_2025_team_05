<h1>Log In</h1>

<%= form_tag '/login',:method => :post  do %>
  <p>
    <%= label_tag :email, "Email Address" %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </p>
  <p class="button">
    <%= submit_tag "Log In" %>
  </p>
<% end %>