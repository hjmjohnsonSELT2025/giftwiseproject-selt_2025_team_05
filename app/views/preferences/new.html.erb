<%# app/views/preferences/new.html.erb %>
<%= form_with model: @preference, url: preferences_path(user_id: params[:user_id]) do |form| %>
  <div class="field">
    <%= form.label :item_name %>
    <%= form.text_field :item_name, required: true %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.number_field :cost, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit "Add to Wish List" %>
  </div>
<% end %>