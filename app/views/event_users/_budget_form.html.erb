<%= form_with model: @event_user,
              url: event_event_user_update_budget_path(@event, event_user_id: @event_user.id),
              method: :patch,
              local: true do |f| %>

  <div class="mb-3">
    <%= f.label :budget, "Budget Amount ($)" %>
    <%= f.number_field :budget, step: "1.00", class: "form-control" %>
  </div>

  <div class="d-flex gap-2 mt-2">
    <%= f.submit "Save", class: "btn btn-success btn-sm" %>

    <%= link_to "Cancel",
                event_path(@event),
                class: "btn btn-secondary btn-sm" %>
  </div>

<% end %>
