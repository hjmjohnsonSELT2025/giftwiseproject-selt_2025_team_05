<div class="container my-4" style="max-width: 500px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-3">Set Your Budget</h2>

      <%= form_with model: @event_user,
                    url: event_event_user_update_budget_path(@event, event_user_id: @event_user.id),
                    method: :patch,
                    local: true do |f| %>

        <div class="mb-3">
          <%= f.label :budget, "Budget Amount ($)" %>
          <%= f.number_field :budget,
                             step: "0.01",
                             min: 0,
                             class: "form-control",
                             value: @event_user.budget %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "Save Budget", class: "btn btn-success" %>
          <%= link_to "Cancel", @event, class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
