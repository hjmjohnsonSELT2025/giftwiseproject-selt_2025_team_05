<h1><%= @event.name %></h1>
<p><strong>Date:</strong> <%= @event.date %></p>
<p><strong>Address:</strong> <%= @event.address %></p>
<p><strong>Type:</strong> <%= @event.event_type %></p>
<p><strong>Host:</strong> <%= "#{@event.user&.first_name} #{@event.user&.last_name}" %></p>
<p><strong>Description:</strong> <%= @event.description %></p>

<% if @event.user == current_user %>
  <%= link_to "Edit", edit_event_path(@event), class: "btn btn-warning" %>
  <%= button_to "Delete", event_path(@event),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this event?" },
                class: "btn btn-danger" %>

<% end %>

<h2>Participants</h2>

<% participants = @event.event_users.where(status: [:joined, :invited]) %>

<% if participants.any? %>
  <table class="table table-striped" style="max-width: 600px;">
    <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    <% participants.each do |event_user| %>
      <tr>
        <td><%= "#{event_user.user.first_name} #{event_user.user.last_name}" %></td>
        <td>
          <%# Visual styling for status: Green for joined, Yellow for pending %>
          <% status_class = event_user.status == 'joined' ? 'bg-success' : 'bg-warning text-dark' %>
          <span class="badge <%= status_class %>">
            <%= event_user.status.capitalize %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No participants yet.</p>
<% end %>

<hr>

<!-- Search Section -->
<h3>Find Users to Invite</h3>
<%= form_with(url: event_path(@event), method: :get, local: true, class: "search-form") do |form| %>
  <div class="input-group mb-3" style="max-width: 500px;">
    <%= form.text_field :query,
                        value: params[:query],
                        placeholder: "Search email or name...",
                        class: "form-control" %>
    <%= form.submit "Search", class: "btn btn-primary" %>
    <% if params[:query].present? %>
      <%= link_to "Clear", event_path(@event), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>

<!-- Search Results -->
<% if @found_users.present? %>
  <h4>Search Results</h4>
  <table class="table table-bordered" style="max-width: 600px;">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @found_users.each do |user| %>
      <tr>
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.email %></td>
        <td>
          <!-- Placeholder for a future 'Invite' feature -->
          <button class="btn btn-sm btn-success">Add to Event</button>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% elsif params[:query].present? %>
  <p class="text-muted">No users found matching "<%= params[:query] %>"</p>
<% end %>


<br>
<%= link_to "Back", request.referer || root_path, class: "btn btn-secondary" %>