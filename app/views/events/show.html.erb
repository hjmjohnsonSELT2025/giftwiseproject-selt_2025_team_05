<h1><%= @event.name %></h1>
<p><strong>Date:</strong> <%= @event.date %></p>
<p><strong>Address:</strong> <%= @event.address %></p>
<p><strong>Type:</strong> <%= @event.event_type %></p>
<p><strong>Host:</strong> <%= "#{@event.user&.first_name} #{@event.user&.last_name}" %></p>
<p><strong>Description:</strong> <%= @event.description %></p>

<% if @event.user == current_user %>
  <%= link_to "Edit", edit_event_path(@event), class: "btn btn-warning" %>
  <%= button_to "Delete", event_path(@event),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this event?" },
                class: "btn btn-danger" %>

<% end %>
<br>
<%= link_to "Back", request.referer || root_path, class: "btn btn-secondary" %>