<h1><%= @event.name %></h1>
<p><strong>Date:</strong> <%= @event.date %></p>
<p><strong>Address:</strong> <%= @event.address %></p>
<p><strong>Type:</strong> <%= @event.event_type %></p>
<p><strong>Host:</strong> <%= "#{@event.user&.first_name} #{@event.user&.last_name}" %></p>
<p><strong>Description:</strong> <%= @event.description %></p>

<div class="mb-4">
  <% if @event.user_id == current_user.id %>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_event_path(@event), class: "btn btn-warning" %>
      <%= button_to "Delete", event_path(@event),
                    method: :delete,
                    data: { turbo_confirm: "Are you sure you want to delete this event?" },
                    class: "btn btn-danger" %>
    </div>
  <% else %>
    <% current_event_user = @event.event_users.find_by(user: current_user) %>

    <% if current_event_user&.status == 'joined' %>
      <%= button_to "Leave Event",
                    event_event_user_path(@event, current_event_user, status: 'left'),
                    method: :patch,
                    data: { turbo_confirm: "Are you sure you want to leave this event?" },
                    class: "btn btn-danger" %>
    <% end %>
  <% end %>
</div>

<h2>Participants</h2>

<% participants = @event.event_users.where(status: [:joined, :pending, :invited]) %>

<% if participants.any? %>
  <table class="table table-striped" style="max-width: 600px;">
    <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <% if @event.user_id == current_user.id %>
        <th>Action</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% participants.each do |event_user| %>
      <tr>
        <td><%= "#{event_user.user.first_name} #{event_user.user.last_name}" %></td>
        <td>
          <% status_class = event_user.status == 'joined' ? 'bg-success' : 'bg-warning text-dark' %>
          <span class="badge <%= status_class %>">
            <%= event_user.status.capitalize %>
          </span>
        </td>
        <td>
          <% if event_user.joined? && event_user.user_id != current_user.id %>
          <%= button_to "View Wish List",
                        view_user_wishlist_preferences_path(user_id: event_user.user.id, event_id: @event.id),
                        method: :get,
                        class: "btn btn-sm btn-success" %>
          <%end %>
        </td>
        <% if @event.user_id == current_user.id %>
          <td>
            <%# Don't show remove button for the owner themselves %>
            <% if event_user.user_id != current_user.id %>
              <%= button_to "Remove",
                            event_event_user_path(@event, event_user, status: 'left'),
                            method: :patch,
                            data: { turbo_confirm: "Are you sure you want to remove this person from the event?" },
                            class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No participants yet.</p>
<% end %>

<% if @event.user_id == current_user.id %>
  <hr>

  <h3>Find Users to Invite</h3>
  <%= form_with(url: event_path(@event), method: :get, local: true, class: "search-form") do |form| %>
    <div class="input-group mb-3" style="max-width: 500px;">
      <%= form.text_field :query,
                          value: params[:query],
                          placeholder: "Search email or name...",
                          class: "form-control" %>
      <%= form.submit "Search", class: "btn btn-primary" %>
      <% if params[:query].present? %>
        <%= link_to "Clear", event_path(@event), class: "btn btn-secondary" %>
      <% end %>
    </div>
  <% end %>

  <% if @found_users.present? %>
    <h4>Search Results</h4>
    <table class="table table-bordered" style="max-width: 600px;">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @found_users.each do |user| %>
        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= user.email %></td>
          <td>
            <%= button_to "Add to Event",
                          event_event_users_path(@event, user_id: user.id),
                          method: :post,
                          class: "btn btn-sm btn-success" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% elsif params[:query].present? %>
    <p class="text-muted">No users found matching "<%= params[:query] %>"</p>
  <% end %>
<% end %>

<h2>My Gifts To Others</h2>

<% gifts = Preference.where(giver: current_user, event: @event) %>

<% if gifts.any? %>
  <table class="table table-striped" style="max-width: 600px;">
    <thead>
    <tr>
      <th>Item Name</th>
      <th>Cost</th>
      <th>Recipient</th>
      <th>Purchased?</th>
    </tr>
    </thead>
    <tbody>
    <% gifts.each do |gift| %>
      <tr>
        <td><%= "#{gift.item_name}" %></td>
        <td><%= "#{gift.cost}" %></td>
        <td><%= "#{User.find_by(id: gift.user_id).first_name}" %></td>
        <td>
          <!-- Checkbox from ChatGPT -->
          <%= form_with model: gift, url: toggle_purchase_show_preference_path(gift), method: :post, local: true do |f| %>

            <%= f.check_box :purchased, checked: gift.purchased,  onchange: 'this.form.submit();' %>

          <% end %>
        </td>
        <td><%= button_to "Unclaim",
                          unclaim_show_preference_preferences_path(item_id: gift.id, user_id: current_user.id, event_id: @event.id),
                          method: :post,
                          class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No gifts yet.</p>
<% end %>




