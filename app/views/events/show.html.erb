<% is_past = @event.date < Date.today %>

<div class="container my-4">
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h1 class="card-title mb-3">
        <%= @event.name %>
        <% if is_past %>
          <span class="badge bg-secondary fs-6 align-middle ms-2">Past Event</span>
        <% end %>
      </h1>

      <div class="row gy-2">
        <div class="col-md-6"><strong>Date:</strong> <%= @event.date %></div>
        <div class="col-md-6"><strong>Type:</strong> <%= @event.event_type.titleize %></div>
        <div class="col-md-6"><strong>Address:</strong> <%= @event.address %></div>
        <div class="col-md-6"><strong>Host:</strong> <%= "#{@event.user&.first_name} #{@event.user&.last_name}" %></div>
      </div>
      <p class="mt-3"><strong>Description:</strong> <%= @event.description %></p>
      <% current_event_user = @event.event_users.find_by(user: current_user) %>
      <div class="mt-3">
        <% if @event.user_id == current_user.id %>
          <div class="d-flex flex-wrap gap-2">
            <%= link_to "Clone", clone_event_path(@event), class: "btn btn-info" %>
            <% unless is_past %>
              <%= link_to "Edit", edit_event_path(@event), class: "btn btn-warning" %>
              <%= button_to "Delete", event_path(@event),
                            method: :delete,
                            data: { turbo_confirm: "Are you sure you want to delete this event?" },
                            class: "btn btn-danger" %>
            <% end %>
          </div>
        <% elsif !is_past %>
          <% current_event_user = @event.event_users.find_by(user: current_user) %>
          <% if current_event_user&.status == 'joined' %>
            <%= button_to "Leave Event",
                          event_event_user_path(@event, current_event_user, status: 'left'),
                          method: :patch,
                          data: { turbo_confirm: "Are you sure you want to leave this event?" },
                          class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <% participants = @event.event_users.where(status: [:joined, :pending, :invited]) %>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="card-title mb-3">Participants</h2>

      <% if participants.any? %>
        <div class="table-responsive">
          <table class="table table-striped align-middle mb-0">
            <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <% unless is_past %>
                <th>Actions</th>
                <th>Gifts</th>
                <% if @event.user_id == current_user.id %>
                  <th>Manage</th>
                <% end %>
              <% end %>
            </tr>
            </thead>
            <tbody>
            <% participants.each do |event_user| %>
              <% participant = event_user.user %>
              <tr>
                <td><%= "#{participant.first_name} #{participant.last_name}" %></td>
                <td>
                  <% status_class = event_user.status == 'joined' ? 'bg-success' : 'bg-warning text-dark' %>
                  <span class="badge <%= status_class %>">
                    <%= event_user.status.capitalize %>
                  </span>
                </td>

                <% unless is_past %>
                  <td>
                    <% if event_user.joined? && participant.id != current_user.id %>
                      <%= button_to "Get Gifts",
                                    user_gift_summary_path(user_id: participant.id, event_id: @event.id),
                                    method: :get,
                                    class: "btn btn-sm btn-success" %>
                    <% end %>
                  </td>
                  <td>
                    <% if participant.id != current_user.id && current_user.has_gift_history_with?(participant) %>
                      <%= link_to "View Gifts", friend_gifts_path(participant), class: "btn btn-sm btn-info" %>
                    <% else %>
                      <span class="text-muted fst-italic small">
                        <small>You havenâ€™t gotten <%= participant.first_name %> any gifts yet</small>
                      </span>
                    <% end %>
                  </td>
                  <% if @event.user_id == current_user.id %>
                    <td>
                      <% if participant.id != current_user.id %>
                        <%= button_to "Remove",
                                      event_event_user_path(@event, event_user, status: 'left'),
                                      method: :patch,
                                      data: { turbo_confirm: "Are you sure you want to remove this person from the event?" },
                                      class: "btn btn-sm btn-danger" %>
                      <% end %>
                    </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted mb-0">No participants yet.</p>
      <% end %>

    </div>
  </div>

  <% if @event.user_id == current_user.id && !is_past %>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h3 class="card-title mb-3">Invite Friends</h3>

        <%= form_with(url: event_path(@event), method: :get, local: true, class: "search-form") do |form| %>
          <div class="input-group mb-3" style="max-width: 600px;">
            <%= form.text_field :query,
                                value: params[:query],
                                placeholder: "Search email or name...",
                                class: "form-control" %>
            <%= form.submit "Search", class: "btn btn-outline-primary" %>

            <% if params[:query].present? %>
              <%= link_to "Clear", event_path(@event), class: "btn btn-secondary" %>
            <% end %>
          </div>
        <% end %>

        <% if @found_users.present? %>
          <p class="text-muted mb-2">
            <% if params[:query].present? %>
              Search Results:
            <% else %>
              Suggestions (Your Friends):
            <% end %>
          </p>

          <div class="table-responsive">
            <table class="table table-bordered mb-0 align-middle" style="max-width: 600px;">
              <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th style="width: 150px;">Action</th>
              </tr>
              </thead>
              <tbody>
              <% @found_users.each do |user| %>
                <tr>
                  <td><%= "#{user.first_name} #{user.last_name}" %></td>
                  <td><%= user.email %></td>
                  <td>
                    <%= button_to "Add to Event",
                                  event_event_users_path(@event, user_id: user.id),
                                  method: :post,
                                  class: "btn btn-sm btn-success w-100" %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        <% else %>
          <% if params[:query].present? %>
            <div class="alert alert-warning">
              No users found matching "<%= params[:query] %>"
            </div>
          <% else %>
            <div class="alert alert-light text-muted">
              No friends available to invite. (They might already be in the event!)
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row mt-4">
    <div class="col mt-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title h5 mb-3">My Shopping List</h2>

          <% gifts = Preference.where(giver: current_user, event: @event) + Suggestion.where(user: current_user, event: @event) %>

          <% if gifts.any? %>
            <div class="table-responsive">
              <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                <tr>
                  <th>Item Name</th>
                  <th>Cost</th>
                  <th>Recipient</th>
                  <th>Purchased?</th>
                  <% unless is_past %>
                    <th></th>
                  <% end %>
                </tr>
                </thead>
                <tbody>
                <% gifts.each do |gift| %>
                  <tr>
                    <td><%= "#{gift.item_name}" %></td>
                    <td><%= "#{gift.cost}" %></td>
                    <td>
                      <% if gift.class.name == "Suggestion" %>
                        <%= "#{User.find_by(id: gift.recipient_id).first_name}" %>
                      <% else %>
                        <%= "#{User.find_by(id: gift.user_id).first_name}" %>
                      <% end %>
                    </td>
                    <td>
                      <% if is_past %>
                        <input type="checkbox" disabled <%= 'checked' if gift.purchased %>>
                      <% else %>
                        <% if gift.class.name == "Suggestion" %>
                          <!-- Checkbox based off of ChatGPT response -->
                          <%= form_with model: gift, url: toggle_purchase_suggestion_suggestion_path(gift, redirect: "event"), method: :post, local: true do |f| %>
                            <%= f.check_box :purchased, checked: gift.purchased, onchange: 'this.form.submit();', disabled: (gift.user != current_user) %>
                          <% end %>
                        <% else %>
                          <%= form_with model: gift, url: toggle_purchase_preference_path(gift, redirect: "event"), method: :post, local: true do |f| %>
                            <%= f.check_box :purchased, checked: gift.purchased, onchange: 'this.form.submit();', disabled: (gift.giver != current_user) %>
                          <% end %>
                        <% end %>
                      <% end %>
                    </td>
                    <% unless is_past %>
                      <td>
                        <% if gift.class.name == "Suggestion" %>
                          <!-- Can edit or remove the suggestion -->
                          <%= link_to "Edit/Delete Custom Gift", edit_suggestion_path(id: gift.id), class: "btn btn-primary" %>
                        <% else %>
                          <!-- Unclaim button -->
                          <%= button_to "Remove Wishlist Gift",
                                        unclaim_preference_preferences_path(item_id: gift.id, event_id: @event.id, user_id: current_user.id, redirect: "event"),
                                        form: { data: { turbo_confirm: "Are you sure you want to unclaim this wishlist gift?" } },
                                        class: "btn btn-danger" %>
                        <% end %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mb-0">No gifts yet.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= render "event_users/budget_frame",
                 event: @event,
                 event_user: current_event_user %>
    </div>
  </div>
  <%= link_to "Back", request.referer || root_path, class: "btn btn-secondary" %>
</div>
