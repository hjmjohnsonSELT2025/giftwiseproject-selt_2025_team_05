<div class="container py-4">
  <div class="text-center mb-5">
    <h1 class="h4 mb-1">Create a New Event</h1>
  </div>

  <%= form_with(model: @event, local: true, html: { class: "mx-auto", style: "max-width: 480px;" }) do |form| %>
    <% if @event.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= pluralize(@event.errors.count, "error") %></strong> prevented this event from being saved:
        <ul class="mb-0">
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :date, "Date", class: "form-label" %>
      <%= form.datetime_field :date,
                              min: Time.current.strftime("%Y-%m-%dT%H:%M"),
                              class: "form-control" %>
      <small class="text-muted">Supply the date, time, and whether its AM or PM</small>
    </div>

    <div class="mb-3">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :event_type, "Event Type", class: "form-label" %>
      <%= form.select :event_type, Event.event_types.keys.map { |t| [t.titleize, t] }, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <h5 class="section-title mb-2">Invite Friends</h5>
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <div class="friend-list-container" style="max-height: 400px; overflow-y: auto;">
          <% if @friends&.any? %>
            <% @friends.each do |friend| %>
              <div class="form-check friend-item">
                <% is_selected = @selected_participant_ids&.include?(friend.id) %>
                <%= check_box_tag "participant_ids[]", friend.id, is_selected, class: "form-check-input", id: "user_#{friend.id}" %>
                <label class="form-check-label w-100" for="user_<%= friend.id %>">
                  <strong><%= friend.first_name %> <%= friend.last_name %></strong><br>
                  <small class="text-muted"><%= friend.email %></small>
                </label>
              </div>
              <hr class="my-1 text-muted">
            <% end %>
          <% else %>
            <p class="text-muted small">You don't have any friends to invite yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-flex gap-2 mb-4">
      <%= form.submit "Create Event", class: "btn btn-primary" %>
      <%= link_to "Back", request.referer || root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

